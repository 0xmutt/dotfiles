# Shortsuts
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd'

# Folders
alias downloads='cd ~/Downloads'
alias projects='cd ~/Projects'
alias pj='cd ~/Projects'
alias sites='cd ~/Dropbox/Projects/Sites'
alias scripts='cd ~/Scripts'
alias pl='cd ~/Dropbox/Projects/Playground/'

# For apt-get
alias apt-install='sudo apt-get install'
alias apt-purge='sudo apt-get --purge remove'
alias apt-remove='sudo apt-get remove'
alias apt-update='sudo apt-get update'
alias apt-upgrade='sudo apt-get upgrage'

# Bash settings
alias settings='nano ~/Scripts/.bash_aliases'
alias profile='nano ~/Scripts/.bash_profile'
alias aliases='nano ~/Scripts/.bash_aliases'

# Git
alias gits='git status'
alias gita='git add'
alias gitc='git commit -m'
alias gitp='git push'
alias gitd='git diff'
